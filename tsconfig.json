{
  "compilerOptions": {
    "target": "ES2021",                              
    "module": "CommonJS",                               
    "rootDir": "./src",  
    "strict": false,                          
    "allowJs": true,   
    "outDir": "./dist",                           
    "moduleResolution": "node",
    "esModuleInterop": true ,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]                           
  },
  "exclude": [
    "./public",
    "./knexfile.ts"
  ],
  "include": ["**/*.ts",]
}
